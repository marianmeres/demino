{
	"name": "@marianmeres/demino",
	"version": "1.1.0",
	"exports": "./src/mod.ts",
	"tasks": {
		"dev": "deno run --watch ./src/mod.ts",
		"test": "deno test -A --watch",
		"test:no-watch": "deno test -A"
	},
	"imports": {
		"@marianmeres/clog": "jsr:@marianmeres/clog@^3.0.0",
		"@marianmeres/http-utils": "jsr:@marianmeres/http-utils@^2.0.1",
		"@marianmeres/midware": "jsr:@marianmeres/midware@^1.2.0",
		"@marianmeres/simple-router": "jsr:@marianmeres/simple-router@^2.2.1",
		"@std/assert": "jsr:@std/assert@^1.0.16",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/fmt": "jsr:@std/fmt@^1.0.8",
		"@std/fs": "jsr:@std/fs@^1.0.20",
		"@std/http": "jsr:@std/http@^1.0.22",
		"@std/path": "jsr:@std/path@^1.1.3",
		"request-ip": "npm:request-ip@^3.3.0"
	},
	"publish": {
		"exclude": [".*", "src/_tests/**", ".editorconfig"]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 4
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	}
}
